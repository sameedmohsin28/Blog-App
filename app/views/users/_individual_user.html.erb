<div class="individual-user-container">
  <div class="user-image">
    <% if @user.photo %>
      <%= image_tag @user.photo, class: 'user-photo' %>
    <% end %>
  </div>
  <div class="user-name-and-number-of-posts">
    <h2 class="user-name"><%= @user.name %></h2>
    <p class="number-of-posts">Number of posts: <%= @user.posts_counter %></p>
  </div>
</div>